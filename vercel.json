{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "crons": [
    {
      "path": "/api/send-daily-email",
      "schedule": "0 23 * * *"
    },
    {
      "path": "/api/send-daily-email-backup",
      "schedule": "0 0 * * *"
    }
  ]
}
